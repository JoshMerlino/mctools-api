{
    "name": "ts-server",
    "version": "1.0.0",
    "description": "Easily create back end servers with powerful API's using TypeScript and Express.",
    "main": "lib/src",
    "types": "lib/",
    "author": "Josh Merlino",
    "license": "ISC",
    "webserver": {
        "http": {
            "port": 80,
            "timeout": 10
        },
        "https": {
            "enabled": true,
            "port": 443,
            "certs": "./ssl"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/JoshMerlino/ts-server.git"
    },
    "scripts": {
        "watch-ts": "tsc -w",
        "watch-js": "nodemon .",
        "dev": "concurrently \"npm:watch-*\"",
        "start": "node .",
        "build": "tsc"
    },
    "devDependencies": {
        "@types/compression": "^1.7.5",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/mkdirp": "^2.0.0",
        "@types/node": "^20.9.4",
        "@types/node-fetch": "^2.6.1",
        "@types/uuid": "^9.0.7",
        "@types/webpack-env": "^1.18.4",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.11.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.54.0",
        "nodemon": "^3.0.1",
        "typescript": "^5.3.2",
        "typescript-eslint": "0.0.1-alpha.0"
    },
    "dependencies": {
        "async-require-context": "^1.8.15",
        "chalk": "4.x.x",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "extract-zip": "^2.0.1",
        "filestore-json": "^1.1.8",
        "mkdirp": "^3.0.1",
        "node-fetch": "2.x.x",
        "uuid": "^9.0.1",
        "yaml": "^2.3.4"
    }
}
